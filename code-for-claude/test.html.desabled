<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modern Scroll Transform</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Inter",
          sans-serif;
        background: #ffffff;
        color: #0a0a0a;
        overflow-x: hidden;
        line-height: 1.6;
      }

      /* Dummy Section 1 */
      .intro-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
        text-align: center;
        padding: 2rem;
        border-bottom: 1px solid #e5e5e5;
      }

      .intro-content h1 {
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #0a0a0a;
        letter-spacing: -0.03em;
      }

      .intro-content p {
        font-size: clamp(1.125rem, 2vw, 1.5rem);
        color: #666;
        max-width: 700px;
        margin: 0 auto 3rem;
        font-weight: 400;
      }

      .scroll-indicator {
        width: 24px;
        height: 40px;
        border: 2px solid #0a0a0a;
        border-radius: 12px;
        position: relative;
        margin: 0 auto;
      }

      .scroll-indicator::before {
        content: "";
        width: 4px;
        height: 8px;
        background: #0a0a0a;
        position: absolute;
        top: 8px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 2px;
        animation: scroll-down 2s infinite;
      }

      @keyframes scroll-down {
        0%,
        100% {
          transform: translate(-50%, 0);
          opacity: 1;
        }
        50% {
          transform: translate(-50%, 12px);
          opacity: 0.3;
        }
      }

      /* Hero Text Section */
      .hero-section {
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #ffffff;
      }

      .hero-content {
        text-align: center;
        padding: 2rem;
        max-width: 1400px;
      }

      .hero-title {
        font-size: clamp(4rem, 15vw, 12rem);
        font-weight: 800;
        letter-spacing: -0.04em;
        line-height: 0.95;
        margin-bottom: 2rem;
        color: #0a0a0a;
      }

      .hero-subtitle {
        font-size: clamp(1.5rem, 4vw, 3rem);
        color: #666;
        font-weight: 400;
        letter-spacing: -0.02em;
      }

      /* Horizontal Scroll Section */
      .cards-section {
        position: relative;
        background: #ffffff;
        z-index: 10;
      }

      .cards-wrapper {
        height: 100vh;
        position: relative;
        overflow: hidden;
      }

      .cards-container {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 50%;
        display: flex;
        gap: 2rem;
        white-space: nowrap;
      }

      .card {
        width: 420px;
        height: 560px;
        flex-shrink: 0;
        opacity: 0;
      }

      .card-inner {
        width: 100%;
        height: 100%;
        border-radius: 12px;
        overflow: hidden;
        background: #ffffff;
        border: 1px solid #e5e5e5;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .card:hover .card-inner {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
      }

      .card-image {
        position: relative;
        height: 280px;
        overflow: hidden;
        background: #f5f5f5;
      }

      .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .card:hover .card-image img {
        transform: scale(1.05);
      }

      .card-content {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        height: calc(100% - 280px);
      }

      .card-number {
        font-size: 0.875rem;
        font-weight: 600;
        color: #999;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
      }

      .card-content h3 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #0a0a0a;
        letter-spacing: -0.02em;
      }

      .card-content p {
        color: #666;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: auto;
      }

      .card-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #0a0a0a;
        text-decoration: none;
        margin-top: 1.5rem;
        transition: gap 0.3s ease;
      }

      .card-link:hover {
        gap: 0.75rem;
      }

      .card-link svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
      }

      .card-link:hover svg {
        transform: translateX(4px);
      }

      /* Outro Section */
      .outro-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
        text-align: center;
        padding: 2rem;
        border-top: 1px solid #e5e5e5;
      }

      .outro-content h2 {
        font-size: clamp(3rem, 7vw, 5rem);
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #0a0a0a;
        letter-spacing: -0.03em;
      }

      .outro-content p {
        font-size: clamp(1rem, 2vw, 1.25rem);
        color: #666;
        max-width: 700px;
        margin: 0 auto;
      }

      .icon {
        stroke: currentColor;
        fill: none;
        stroke-width: 2;
        stroke-linecap: round;
        stroke-linejoin: round;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .hero-title {
          font-size: clamp(3rem, 12vw, 6rem);
        }

        .card {
          width: 340px;
          height: 480px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Intro Section -->
    <section class="intro-section">
      <div class="intro-content">
        <h1>Excellence in Motion</h1>
        <p>
          Experience the art of storytelling through elegant scroll interactions
        </p>
        <div class="scroll-indicator"></div>
      </div>
    </section>

    <!-- Hero Text Section -->
    <section class="hero-section" id="heroSection">
      <div class="hero-content" id="heroContent">
        <h1 class="hero-title">Design That Speaks</h1>
        <p class="hero-subtitle">Creating meaningful experiences</p>
      </div>
    </section>

    <!-- Horizontal Scroll Cards Section -->
    <section class="cards-section" id="cardsSection">
      <div class="cards-wrapper">
        <div class="cards-container" id="cardsContainer">
          <!-- Card 1 -->
          <div class="card">
            <div class="card-inner">
              <div class="card-image">
                <img
                  src="https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?w=800&h=600&fit=crop"
                  alt="Design Excellence"
                />
              </div>
              <div class="card-content">
                <div class="card-number">01</div>
                <h3>Design Excellence</h3>
                <p>
                  Crafting beautiful digital experiences that resonate with
                  users and drive engagement
                </p>
                <a href="#" class="card-link">
                  Explore More
                  <svg class="icon" viewBox="0 0 24 24">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Card 2 -->
          <div class="card">
            <div class="card-inner">
              <div class="card-image">
                <img
                  src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=600&fit=crop"
                  alt="Strategic Thinking"
                />
              </div>
              <div class="card-content">
                <div class="card-number">02</div>
                <h3>Strategic Thinking</h3>
                <p>
                  Data-driven approaches that transform business challenges into
                  opportunities
                </p>
                <a href="#" class="card-link">
                  Learn More
                  <svg class="icon" viewBox="0 0 24 24">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Card 3 -->
          <div class="card">
            <div class="card-inner">
              <div class="card-image">
                <img
                  src="https://images.unsplash.com/photo-1551434678-e076c223a692?w=800&h=600&fit=crop"
                  alt="Team Collaboration"
                />
              </div>
              <div class="card-content">
                <div class="card-number">03</div>
                <h3>Team Collaboration</h3>
                <p>
                  Building cohesive teams that deliver exceptional results
                  through unified vision
                </p>
                <a href="#" class="card-link">
                  Discover More
                  <svg class="icon" viewBox="0 0 24 24">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Card 4 -->
          <div class="card">
            <div class="card-inner">
              <div class="card-image">
                <img
                  src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?w=800&h=600&fit=crop"
                  alt="Innovation"
                />
              </div>
              <div class="card-content">
                <div class="card-number">04</div>
                <h3>Innovation</h3>
                <p>
                  Pushing boundaries with cutting-edge solutions that redefine
                  industry standards
                </p>
                <a href="#" class="card-link">
                  View Details
                  <svg class="icon" viewBox="0 0 24 24">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Card 5 -->
          <div class="card">
            <div class="card-inner">
              <div class="card-image">
                <img
                  src="https://images.unsplash.com/photo-1553877522-43269d4ea984?w=800&h=600&fit=crop"
                  alt="Results Driven"
                />
              </div>
              <div class="card-content">
                <div class="card-number">05</div>
                <h3>Results Driven</h3>
                <p>
                  Measuring success through tangible outcomes and continuous
                  improvement
                </p>
                <a href="#" class="card-link">
                  See Results
                  <svg class="icon" viewBox="0 0 24 24">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Outro Section -->
    <section class="outro-section">
      <div class="outro-content">
        <h2>The Journey Continues</h2>
        <p>Every great design tells a story. Let's write yours together.</p>
      </div>
    </section>

    <!-- GSAP Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    <script>
      gsap.registerPlugin(ScrollTrigger);

      const cards = document.querySelectorAll(".card");
      const cardsContainer = document.getElementById("cardsContainer");
      // Hero text shrink and fade animation
      gsap
        .timeline({
          scrollTrigger: {
            trigger: "#heroSection",
            start: "center center",
            end: "+=650", // ⬅️ was '+=250' – increased scroll distance
            scrub: 0.5,
            pin: true,
            pinSpacing: false,
          },
        })
        .to(".hero-title", {
          scale: 0.2,
          opacity: 0,
          duration: 1,
          ease: "power2.inOut",
        })
        .to(
          ".hero-subtitle",
          {
            scale: 0.3,
            opacity: 0,
            duration: 1,
            ease: "power2.inOut",
          },
          0.1
        );

      // Calculate total width with proper spacing
      let totalWidth = 0;
      cards.forEach((card) => {
        totalWidth += card.offsetWidth + 32;
      });

      // Calculate offset to center first and last card
      const cardWidth = cards[0].offsetWidth;
      const viewportCenter = window.innerWidth / 2;
      const cardCenter = cardWidth / 2;

      // Start position: first card centered
      const startOffset = viewportCenter - cardCenter;

      // End position: last card centered
      // Total distance to move = total width - one card width - start offset
      const scrollDistance = totalWidth - cardWidth - startOffset;

      // Set initial position to center first card
      gsap.set(cardsContainer, {
        x: startOffset,
        left: 0,
      });

      // Cards fade in as we approach the cards section
      gsap.fromTo(
        cards,
        {
          opacity: 0,
          y: 30,
        },
        {
          opacity: 1,
          y: 0,
          stagger: 0.1,
          duration: 1,
          ease: "power2.out",
          scrollTrigger: {
            trigger: "#cardsSection",
            start: "top 85%",
            end: "top 45%",
            scrub: 0.5,
          },
        }
      );

      // Horizontal scroll animation
      gsap.to(cardsContainer, {
        x: -scrollDistance,
        ease: "none",
        scrollTrigger: {
          trigger: "#cardsSection",
          start: "top top",
          end: () => `+=${scrollDistance * 2}`,
          scrub: 0.5,
          pin: true,
        },
      });
    </script>
  </body>
</html>
